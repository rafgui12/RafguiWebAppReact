{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://rafgui.com/blog", 
        "type": 301,
        "host": "blog.rafgui.com"
      },
      {
        "source": "/:path",
        "destination": "https://rafgui.com/blog/:path", 
        "type": 301,
        "host": "blog.rafgui.com"
      },
      {
        "source": "/",
        "destination": "https://rafgui.com/admin", 
        "type": 301,
        "host": "admin.rafgui.com"
      },
      {
        "source": "/:path",
        "destination": "https://rafgui.com/admin/:path",
        "type": 301,
        "host": "admin.rafgui.com"
      }
    ]
  }
}